<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-12">
            <h1>{{titleH1}}</h1>
            <a href="/contacto/2">Busca el id 43</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-12">
            <form action="/contacto/comment" method="GET">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="surname" placeholder="Apellido" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="comments" placeholder="Comentanos" required>
                </div>
                <button type="submit" class="btn btn-primary">Envia tu consulta</button>
            </form>
        </div>
    </div>
    {{#if message }}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4 class="text-{{messageType}}">{{message}}</h4>
        </div>
    </div>
    {{/if}}
</div>
