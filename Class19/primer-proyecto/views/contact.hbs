<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1>Contact</h1>
            <p>
                {{text}}
            </p>
            <form action="/contact" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="surname" placeholder="Apellido">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="comment" placeholder="Dejanos tu comentario...">
                </div>
                <input type="submit" value="Envianos tu consulta" class="btn btn-primary">
            </form>
            <hr>
            <h2>{{name}} {{surname}}</h2>
            <h3>{{email}}</h3>
            <p>
                {{comment}}
            </p>
        </div>
    </div>
</div>